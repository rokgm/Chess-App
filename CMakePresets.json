{
    "version": 2,
    "configurePresets": [
        {
            "name": "Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release",
            "inherits": "Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "RelWithDebInfo",
            "inherits": "Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "configurePreset": "Debug",
            "targets": [
                "chess_ai"
            ]
        },
        {
            "name": "Release",
            "inherits": "Debug",
            "configurePreset": "Release"
        },
        {
            "name": "RelWithDebInfo",
            "inherits": "Debug",
            "configurePreset": "RelWithDebInfo"
        },
        {
            "name": "UnitTestsDebug",
            "inherits": "Debug",
            "configurePreset": "Debug",
            "targets": [
                "unit_tests"
            ]
        },
        {
            "name": "UnitTestsRelease",
            "inherits": "Release",
            "configurePreset": "Release",
            "targets": [
                "unit_tests"
            ]
        },
        {
            "name": "PerformanceTestsDebug",
            "inherits": "Debug",
            "configurePreset": "Debug",
            "targets": [
                "performance_tests"
            ]
        },
        {
            "name": "PerformanceTestsRelease",
            "inherits": "Release",
            "configurePreset": "Release",
            "targets": [
                "performance_tests"
            ]
        }
    ]
}